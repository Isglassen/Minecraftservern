{
  "$id": "https://isglassen.github.io/Minecraftservern/schema/pages.schema.json",

  "description": "A list of page information",
  "type": "array",
  
  "items": {
    "type": "object",
    "required": [ "color", "name", "categories", "link" ],
    "properties": {

      "color": {
        "description": "The color to display for this page",
        "type": "string"
      },

      "name": {
        "description": "The name to display for this page",
        "type": "string"
      },

      "categories": {
        "$ref": "https://isglassen.github.io/Minecraftservern/schema/pages.schema.json"
      },

      "link": {
        "description": "The link to this page. Has to be relative for now",
        "type": "string"
      },

      "gradient": {
        "description": "A gradient to display instead",
        "type": "string"
      }

    }
  }
}